<header class="navbar">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to image_tag("logo.png", alt: "Logo"), '/', class:"navbar-brand" %>

			<nav>
				<div class="dropdown">
					<ul class="nav pull-right navbar-nav" role="menu" aria-labelledby="dLabel">

						<%= render 'layouts/header_menu_item', title: "Home", url: root_path %>

						<%= render 'layouts/header_menu_item', title: "About", url: about_path %>

						<% if  signed_in? %>
						<%= render 'layouts/header_menu_item', title: "Sign out (#{ current_user.name })", url: signout_path, method: "delete" %>
						<% else %>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Sign in... <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<%= render 'layouts/header_menu_item', title: "Sign in via login", url: signin_path %>
								<li class="divider"></li>
								<%= render 'layouts/header_menu_item', title: "Sign in via Facebook", url: '/auth/facebook' %>
							</ul>
						</li>
						<%#= render 'layouts/header_menu_item', title: "Sign in", url: signin_path %>
						<% end %>

						<% if signed_admin? %>
						<%= render 'layouts/header_menu_item', title: "Users", url: users_path %>
						<% end %>
					</ul>
				</div>
			</nav>
		</div>
	</div>
</header>
