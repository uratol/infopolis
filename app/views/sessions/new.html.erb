<%= provide(:title, "Sign in") %>
<div class="center hero-unit">

	<%= form_for(:session, url: sessions_path) do |f| %>
	<%= f.label 'email or name' %>
	<%= f.text_field :email, value: @email_prev, autofocus: @email_prev.blank? %>

	<%= f.label :password %>
	<%= f.password_field :password, autofocus: !@email_prev.blank? %>
	<br />
	<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
	<% end %>
</div>