<%= provide(:title, full_title("Users")) %>
<div class="center hero-unit">
	<table class="table table-bordered">
		<thead>
			<tr>
				<th> Name </th>
				<th> Email </th>
				<th> Admin </th>
				<th> Edit </th>
				<th> Delete </th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |u| %>
			<tr>
				<td> <%= u.name %> </td>
				<td> <%= u.email %> </td>
				<td> <%= "Yes" if u.admin %> </td>
				<td> <%= link_to "Edit", edit_user_path(u) %> </td>
				<td> <%= link_to "Delete", user_path(u), method: :delete %> </td>
			</tr>
			<% end %>
		</tbody>
	</table>
  <%= link_to "New user", new_user_path, class: "btn btn-large btn-primary" %>
</div>
